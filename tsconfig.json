{
    "compilerOptions": {
        "target": "es2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules", "dist"]
}
